<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thejan.proj.restaurant.tv.smartrestaurant_mobile">

    <application
        android:name=".Restaurant"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartRestaurantMobile">
        <activity android:name=".view.activity.InvoiceDetailsActivity"></activity>
        <activity android:name=".view.activity.PastOrdersActivity" />
        <activity android:name=".view.activity.ReserveTableActivity" />
        <activity android:name=".view.activity.AccountActivity" />
        <activity android:name=".view.activity.RegisterActivity" />
        <activity android:name=".view.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.LoginActivity" />
        <activity android:name=".view.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>